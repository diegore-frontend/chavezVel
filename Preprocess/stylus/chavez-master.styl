@import 'nib'
@import 'components/cmps.colors'

$prinFont = 'Teko', sans-serif
$subFont = 'Muli', sans-serif

html, body
	height: 100%

body
	-moz-osx-font-smoothing: grayscale;
	-webkit-font-smoothing: antialiased;
	background-color: $concretedk
	font-family: $prinFont
	font-size: 12px
	font-weight: normal
	overflow-x: hidden
	position: relative

	+above(1026px)
		font-size: 13px

	@media screen and (max-height: 720px) and (min-width: 1280px) and (max-width: 1440px)
		font-size 11px

	+above(1560px)
		font-size: 14px

