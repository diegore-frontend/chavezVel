.ap
	&-int-partner-data
		text-align: left

	&-partner
		.ap-tt-sect
			display: inline-block;
			vertical-align: top;
			max-width: 4em;
			width: 100%;
			text-align: left;
			line-height: .8em;
			font-size: 4.2em;
			margin-left: 0.2em;

			&--small
				font-size: 0.4em;
				display: block;

			&:before
				bottom: -.01em
				margin-left: 0
				left: 0

		&-list
			margin-top: 1.4em

		&-item
			display: inline-block
			font-size: 1.2em
			margin-bottom: .8em

			&:nth-child(2)
				margin-left: 1em

			&:nth-child(3)
				display block

		&-link
			color: #FFF
			font-family: $subFont

			&:before
				color: $orange
				display inline-block
				vertical-align -.2em
				font-size: 1.6em
				margin-right: .4em

