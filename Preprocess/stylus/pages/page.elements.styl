.ap
	&-no-ov
		overflow: auto

	// Elements
	&-elements
		height: 100%

		&-panel
			// background-color: $blue
			max-width: 960px
			margin: auto
			padding: 1em

		.ap-header
			margin-bottom: 1em

	&-elms
		margin: 1em 0 4em

		> .ap-tt
			color: $bluelg
			font-style: italic
			font-size: 2em
			margin-bottom: .6em
			border-bottom: .1em solid

		> h3
			color: #FFF

// Colores
.ap
	&-clrs
		display: inline-block;
		height: 6em;
		margin-right: 1em;
		vertical-align: middle;
		position: relative
		width: 6em;

		&:before
			background-color: #FFF
			bottom: 0;
			position: absolute;
			text-align: center;
			width: 100%;

		&--orange
			background-color: $orange

			&:before
				content: '$orange'

		&--concretedk
			background-color: $concretedk

			&:before
				content: '$concretedk'

		&--base
			background-color: $base

			&:before
				content: '$base'

		&--lightGr
			background-color: $lightGr

			&:before
				content: '$lightGr'

// Texto
.ap
	&-txt
		&-list
			li
				margin-bottom: 1em

// Glimpls
.ap
	&-elms
		&-glmps
			color: #FFF

			.ap-glmp
				display inline-block
				margin-right: .2em
				font-size: 2em

