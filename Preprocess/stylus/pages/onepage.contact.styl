.ap
	&-op
		&-sect
			&--contact
				background: $orange
				padding: 7em 0 0
				position: relative

	&-area
		&-ct
			padding: 0 1em 1em
			position: relative
			z-index: 2

			+above(1000px)
				max-width: 80em
				margin: auto

			.ap
				&-tt-sect
					&:before
						background-color: $orange

					&t
						color: $base
						margin-bottom: 0em
						font-size: 1.6em

						&:before
							color: $orange
							margin-right: .2em

				&-txt
					color: $base
					font-family: $prinFont

					&:nth-child(2)
						margin-bottom: 1em

					&--link
						display block
						color: $base
						font-family: $subFont

					&-phone
						font-family: $subFont
						display inline-block

						a
							color: $base
							text-decoration underline

	&-ct
		&-head
			+above(1000px)
				margin-bottom: 6em

		&-info
			background-color: #FFF;
			padding: 1em;

			+above(1000px)
				width: 80%;
				position: relative
				margin-bottom: 1em;

				&:before
					content: '';
					width: 100%;
					height: 100%;
					background-color: #ffffff;
					position: absolute;
					left: 50%;
					top: 0;
					margin-left: -100%;

			&-data
				+below(480px)
					float: none
					width: 100%
					margin: 0 0 1em

				.ap-tt-sectt
					margin: 0.6em 0

				+above(1000px)
					font-size: 1.2em

		&-item
			font-family: $subFont
			color: $base

		&-map
			position: absolute
			width: 100%
			height: 100%
			left: 0
			top: 0

			#map
				height: 80%
				width: 100%
				filter: grayscale(100%);

				+above(760px)
					height: 100%
