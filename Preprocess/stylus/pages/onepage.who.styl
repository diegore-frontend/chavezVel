.ap
	&-op
		&-sect
			&--who
				padding-top: 0

	&-who
		position: relative

		.ap-tt-sect
			position: absolute;
			width: 100%;
			color: #fff;
			top: 2.2em;
			z-index: 2;

			&:before
				background-color: $orange

		&-img
			&-bg
				background: url('../img/img-somos.jpg') center top no-repeat / cover
				position: relative;
				height: 32em;
				padding-top: 16em;

		// Info
		&-info
			position: relative;
			z-index: 3;
			background-color: rgba(0,0,0,.5);
			border-left: .4em solid $orange;
			padding: 1em;
			float: right
			width: 80%
			max-width: 24em

			img
				width: 15em;
				display: block;
				margin: 0 auto 1em

		&-data
			width: 16em;
			margin: .6em auto 0;

			&--wins
				border-right: 1px solid rgba(255, 255, 255, .2)

			&--number
				font-size: 3em;
				color: white;
				text-align: center;
				display: block;
				line-height: 0.6em

			&-tt
				color: $orange
				font-family: $subFont
				display block
				text-align center
				font-size: .88em

		&-block
			padding: 1em

			.ap-tt-sect--orange
				color: $orange
				font-weight: 300;
				font-size: 1.8em;
				margin: 0.6em 0;

			.ap-txt
				margin-bottom: 1em
