.ap
	// Loading
	&-is-loading
		.ap
			&-lay
				opacity: 0

	&-main
		height: 100%;
		position: relative;
		z-index: 2;

	// Onepage
	&-onepage
		height: 100%

.ellip
	display: block;
	height: 100%;

.ellip-line
	display: inline-block;
	text-overflow: ellipsis;
	white-space: nowrap;
	word-wrap: normal;
	max-width: 100%;

.ellip,
.ellip-line
	position: relative;
	overflow: hidden;
