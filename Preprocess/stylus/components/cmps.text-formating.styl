// Titles
h1
	font-size: 1.8em

h2
	font-size 3.8em

h3
	font-size: 2.4em

h4
	font-size: 1.2em

.ap
	// Text titles
	&-tt
		&-sect
			color: $base
			position: relative;
			text-transform: uppercase;
			text-align: center;
			font-weight: 300;

			&:before
				content: '';
				width: 1em;
				height: .04em;
				background-color: $base
				position: absolute;
				bottom: 0.2em
				left: 50%;
				margin-left: -0.5em;

			&--small
				&-bold
						position: relative;
						font-weight: 700;
						color: $orange

						&:before
							background-color: rgba($orange, .4)
							content: ''
							width: 1.8em
							height: .04em;
							position: absolute
							bottom: .2em


	&-txt
		color: #FFF
		font-family: $subFont

		&--link
			color: $orange
			text-decoration: underline

		&--yell
			color: $yell

		&--small
			display: block
			font-size: .8em
			color: grey

		&--nu
			font-weight: 900
			color: $redf

